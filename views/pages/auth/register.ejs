<% include ../../partials/header.ejs %></head>

<body>
    <% include ../../partials/navbar.ejs %>
    
    <form class="container" action="#" method="POST">
        <h2>Sign Up</h2>
        <div class="form-group">
                    <label>Username</label>
                   <input name="username" class="form-control" type="text" placeholder="Username" required>
        </div>
        <div class="form-group">
                    <label>Password</label>
                    <input name="password" class="form-control" placeholder="Password" type="Password" pattern = ".{8,}" required title ="Password must be minimum 8 characters"required>
        </div>
        <div class="form-group">
            <label>Country</label>
            <input class="form-control" type="country" name="country" placeholder="Country">
        </div>
        <div class="form-group">
            Date of Birth
            <input id="birthday" name="birthday" class="form-control" placeholder="Date of Birth" type="date" required> 
        </div>
        <div class="form-group">
            <label>Gender</label>
            <div>
            <input type="radio" name="gender" value="male"> Male<br>
            <input type="radio" name="gender" value="female"> Female<br>
            </div>
        </div>
        <div class="form-group">
            <input type="checkbox" required><span>** I accept the terms and conditions</span>
        </div>
        <div class="form-group">
             <input class="btn btn-warning" type="submit" value="Enter">
        </div>
    </form>
